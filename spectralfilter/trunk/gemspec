require 'rubygems'

spec = Gem::Specification.new do |s|
  s.name         = "spectralfilter"
  s.version      = "0.0.1"
  s.author       = "Ralf Müller"
  s.email        = "stark.dreamdetective@gmail.com"
  s.platform     = Gem::Platform::RUBY
  s.summary      = "Filtering Datasets via Highpass,Lowpass,Bandpass or Bandblock"
  candidates     = Dir.glob("lib/*.rb") + [ "rakefile", "gemspec"]
  s.files        = candidates.delete_if do |item|
                     item.include?("www") || item.include?("rdoc")
                   end
  s.require_path = "lib"
  s.test_files   = Dir.glob("test/test_*.rb")
  s.has_rdoc     = true
end

